{
  "requireCleanWorkingDir": false,
  "buildCommand": "npm run build",
  "src": {
    "tagName": "v%s",
    "assets": "dist/kvass.*"
  },
  "dist": {
    "baseDir": "dist"
  },
  "github": {
    "releaseName": "Release v%s",
    "release": true,
    "tokenRef": "GITHUB_TOKEN"
  },
  "npm": {
    "publish": true
  }
}
